{
  "manifest_version": 3,
  "name": "SmartClaim 3.0",
  "description": "Automates Stake.com bonus redemptions for faster and more reliable claiming.",
  "version": "3.0.7",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://staketr.com/*",
    "https://stake.com/*",
    "https://stake.ac/*",
    "https://stake.games/*",
    "https://stake.bet/*",
    "https://stake.mba/*",
    "https://stake.jp/*",
    "https://stake.bz/*",
    "https://stake.ceo/*",
    "https://stake.krd/*",
    "https://stake.mg/*",
    "https://stake.pet/*",
    "https://stake1005.com/*",
    "https://stake1017.com/*",
    "https://stake1021.com/*",
    "https://stake1022.com/*",
    "https://smartclaim.theworkpc.com/*",
    "wss://smartclaim.theworkpc.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://staketr.com/*",
        "https://stake.com/*",
        "https://stake.ac/*",
        "https://stake.games/*",
        "https://stake.bet/*",
        "https://stake.mba/*",
        "https://stake.jp/*",
        "https://stake.bz/*",
        "https://stake.ceo/*",
        "https://stake.krd/*",
        "https://stake.mg/*",
        "https://stake.pet/*",
        "https://stake1005.com/*",
        "https://stake1017.com/*",
        "https://stake1021.com/*",
        "https://stake1022.com/*"
      ],
      "js": ["escript.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "SmartClaim 3.0",
    "default_icon": "icons/icon-48.png"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
